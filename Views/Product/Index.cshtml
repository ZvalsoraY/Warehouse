@model IEnumerable<Warehouse.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>Create New Product
            </a>
        </div>
    </div>
</div>

<br /> <br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Application Type</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var  obj in Model)
            {
                <tr>
                    <td width="20%">@obj.Name</td>
                    <td width="30%">@obj.ShortDesc</td>
                    <td width="30%">@obj.ApplicationType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="obj.Id" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit<i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="obj.Id" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete<i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> No Product exists.</p>
}

